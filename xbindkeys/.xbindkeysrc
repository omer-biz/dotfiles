"amixer set Master 5%+; pkill -RTMIN+23 dwmblocks" 
	XF86AudioRaiseVolume


"amixer set Master 5%-; pkill -RTMIN+23 dwmblocks"
	XF86AudioLowerVolume

"pamixer -t; pkill -RTMIN+23 dwmblocks"
	XF86AudioMute

# media keys
"playerctl play-pause"
	XF86AudioPlay

"playerctl previous"
	XF86AudioPrev

"playerctl next"
	XF86AudioNext

"playerctl stop"
	XF86AudioStop

# lockscreen
"slock"
	Control+Alt + l

# mount devce
"$HOME/.local/scripts/mount.sh"
	Control+Alt+ m

"$HOME/.local/scripts/power_opts.sh"
	Control+ q
# kill compositor
# "kill $(pidof picom); notify-send 'killed compositor'"
"$HOME/.local/scripts/toggle_picom.sh"
	Control+Alt + p

"alacritty"
 	Shift+Alt + backslash

# screenshots
# "shotgun ~/pictures/screenshots/$(date '+%b_%d_%I:%M_%p').png"
"flameshot& flameshot gui"
	Print

# "pcmanfm"
