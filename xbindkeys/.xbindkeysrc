#########################
#  don't forget to		#
#  xbindkeys --poll-rc	#
#########################

"$HOME/.local/scripts/airplane.sh"
      XF86RFKill
      
"pulsemixer --change-volume +5; pkill -RTMIN+23 dwmblocks" 
	XF86AudioRaiseVolume

"pulsemixer --change-volume -5; pkill -RTMIN+23 dwmblocks"
	XF86AudioLowerVolume

"pulsemixer --toggle-mute; pkill -RTMIN+23 dwmblocks"
	XF86AudioMute

"$HOME/.local/scripts/music.sh togg"
	XF86AudioPlay

"$HOME/.local/scripts/music.sh prev"
	XF86AudioPrev

"$HOME/.local/scripts/music.sh next"
	XF86AudioNext

"$HOME/.local/scripts/music.sh stop"
	XF86AudioStop

"xautolock -locknow"
	Control+Alt + l

"$HOME/.local/scripts/mount.sh"
	Control+Alt+ m

"$HOME/.local/scripts/unmount.sh"
	Control+Alt+ u

"$HOME/.local/scripts/power_opts.sh"
	Control+ q

"$HOME/.local/scripts/toggle_picom.sh"
	Control+Alt + p

"alacritty"
 	Shift+Alt + backslash

"flameshot& flameshot gui"
	Print

"$HOME/.local/scripts/pm_tg.sh"
	Alt + q

"firefox"
	Shift+Alt + b

"$HOME/.local/scripts/wall.sh"
	Control + w

"xbacklight -dec 5"
    XF86MonBrightnessDown 

"xbacklight -inc 10"
    XF86MonBrightnessUp
