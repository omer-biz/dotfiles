alias \
	cp="cp -iv" \
	mv="mv -iv" \
	rm="rm -vI" \

alias \
	ls="lsd" \
	grep="grep --color=auto" \
	diff="diff --color=auto" \

alias \
	cf="cd $HOME/dotfiles/scripts/.local/scripts/" \
	info="info --vi-keys" \
	za="zathura" \
	re="n $HOME/reminder.md" \
	sc="doas make clean install"

